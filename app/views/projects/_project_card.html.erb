<div class="column grid_6 card_wrapper">

  <div class="project_card">
  
    <h2><%= link_to(truncate(project_card.name, :length => 40), project_card) %></h2>
    <p>
      Budget: <%= number_to_human(project_card.budget) %> &nbsp;
      <span class="quiet">Department name</span>
    </p>
    <div class="project_leader">
      <img alt="Administrator" src="http://gravatar.com/avatar/383c8158ee366597f7e98b952b012723?size=40" />
    </div>
    
    <hr />
    
    <div class="project_images">
      <%= image_tag(image_url("/images/project_image.png")) %>
    </div>
    <p class="soft">
      <%= truncate(project_card.description, :length => 180) %>
    </p>
    
  </div>
  
</div>
