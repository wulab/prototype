<li>
  <span class="content">
    <%= micropost.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
    <%= link_to "Delete", micropost, :method => :delete, :confirm => "Are you sure?", :title => "Delete #{micropost.content}" %>
    <% end %>
  </span>
</li>
