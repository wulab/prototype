<li>
  <div class="user_photo medium">
    <%= link_to user do %>
    <%= gravatar_for user, :size => 100 %>
    <% end %>
  </div>
  <h4>
    <% css_class = "admin_link" if user.admin? %>
    <%= link_to user.name, user, :class => css_class %>
  </h4>
  <p>Current position</p>
  <div class="actions">
    <% if current_user && current_user.admin? && !user.admin? %>
    <%= link_to "Delete", user, :method => :delete, :confirm => "Are you sure?", :class => "button", :title => "Delete #{user.name}" %>
    <% end %>
  </div>
</li>
